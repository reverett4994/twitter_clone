<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= link_to 'Tweets', tweets_path(:user=>user) %> </td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

