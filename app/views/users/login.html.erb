<h1>Log In!</h1>

<%= form_tag('login_user',method: "get") do %>
  <div class="field">
    
    <%= text_field_tag :username,'',:placeholder => 'Username',:class=>'text_field' %>
  </div>
  <div class="field">
    
    <%= password_field_tag :password,'',:placeholder => 'Password',:class=>'text_field' %>
  </div>
    <%= submit_tag 'Log In',:class=>'submit_button' %>
<% end %>
<p>Don't have an account? <%= link_to 'Sign up', new_user_path,:id=>'signup_link' %> now!</p>

