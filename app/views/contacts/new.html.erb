<h1>Make a email </h1>

<%= form_for @contact do |f| %>
	<div class="field">
		<%=f.label :name %>	<br>
	    <%= f.text_field :name,:placeholder => 'Name',:class=>'text_field' %>
    </div>
	<div class="field">
		<%=f.label :email %>	<br>
	    <%= f.text_field :email,:placeholder => 'Email',:class=>'text_field' %>
    </div>
	<div class="field">
		<%=f.label :message %>	<br>
	    <%= f.text_area :message,:placeholder => 'Message',:class=>'text_field' %>
  </div>
	<div class="hidden">
		<%=f.label :nickname %>	<br>
	    <%= f.text_field :nickname,:placeholder => 'Leave Blank',:class=>'text_field' %>
  </div>  
  <div class="actions">
    	<%= f.submit'Send email',:class=>'submit_button' %>
  </div>
   
<%end%> 
